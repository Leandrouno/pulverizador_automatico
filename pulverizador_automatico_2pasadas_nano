//marron GND
//rojo VCC
//naranja SEÃ‘AL

#include <Servo.h>
 
Servo myservo; 
int pos = 0;
int pasadas=0;
const int sensorPin = A2;
 
void setup() {
     Serial.begin(9600);
     pinMode(sensorPin , INPUT);
     myservo.attach(A3); 
     Serial.println("iniciado");
     }
 
void loop() {
     int value = 0;
     value = digitalRead(sensorPin );
 
     if (value == LOW) {
         pulveriza();
         Serial.println("pulveriza");
         delay(1000);
    }

 }

void pulveriza() {
     for (pasadas = 0; pasadas <= 1; pasadas += 1){
     for (pos = 0; pos <= 180; pos += 1) 
   {
      myservo.write(pos);              
      delay(2);                       
   }
 
   for (pos = 180; pos >= 0; pos -= 1) 
   {
      myservo.write(pos);                 
   }
     }
  }
